@page
@model CookiesAndKeysModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.CookiesAndKeys;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.FurAffinityCookies"></label>
                <input asp-for="Input.FurAffinityCookies" class="form-control" />
                <span class="form-text text-muted small">
                    "a" and "b" cookies are required to connect to Fur Affinity.
                    See the <a href="https://@ArtworkInbox.FurAffinity.Notifications.FAExportHost/docs" target="_blank">FAExport docs</a> for more info.
                </span>
            </div>
            <div class="form-group">
                <label asp-for="Input.WeasylApiKey"></label>
                <input asp-for="Input.WeasylApiKey" class="form-control" />
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}