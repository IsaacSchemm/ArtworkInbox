@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";

    string[] mainProviders = new[] { "DeviantArt", "Twitter", "Tumblr" };
}

<div class="row">
    <div class="col-md-12">
        <img align="left"
             src="/images/mascot-magnifying-glass.png"
             width="216"
             height="378"
             alt="Aimy with a magnifying glass"
             class="d-none d-lg-block mr-4" />
        <h1>@ViewData["Title"]</h1>
        <section>
            <p>
                To create your Artwork Inbox account, just attach an account on one of the sites above.
                Once you've logged in, you can attach your other accounts from the external logins page.
            </p>
            <p class="small">
                If you would like to see your site listed here, file an issue on the Artwork Inbox repository at GitHub.
            </p>
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0) {
                    <div>
                        <p>
                            There are no external authentication services configured. See <a href="https://go.microsoft.com/fwlink/?LinkID=532715">this article</a>
                            for details on setting up this ASP.NET application to support logging in via external services.
                        </p>
                    </div>
                } else {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins.Where(x => mainProviders.Contains(x.Name))) {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                                <span class="dropdown">
                                    <button class="btn btn-secondary dropdown-toggle" type="button" id="otherProviders" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Other
                                    </button>
                                    <span class="dropdown-menu" aria-labelledby="otherProviders">
                                        @foreach (var provider in Model.ExternalLogins.Where(x => !mainProviders.Contains(x.Name))) {
                                            <button type="submit" class="btn btn-link" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                        }
                                    </span>
                                </span>
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
