@model ArtworkInbox.Models.InoreaderSettingsViewModel
@{
    ViewData["Title"] = "Inoreader Settings";
}

<h1>Inoreader Settings</h1>

<form method="post" asp-controller="Inoreader" asp-action="Settings">
    <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" asp-for="AllAsText">
        <label class="form-check-label" asp-for="AllAsText"></label>
    </div>
    <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" asp-for="UnreadOnly">
        <label class="form-check-label" asp-for="UnreadOnly"></label>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>